<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../includes/header.ejs') %>
</head>
<body>
    <%- include('../../includes/nav.ejs') %>
    <div class="jumbotron text-center">
        <div class="container">
          <h1><%= title %> - Some Cool Products</h1>
          <div class="container2">
            <% if (products.length > 0) { %>
                    <% for (let product of products) { %>
                        
                        <h2><%= product.name %></h2>

                        <div class="containerBorder">
                            <img src="<%= product.imageUrl %>"
                             alt="<%= product.name %>"
                             style="width:490px;">
                        </div>
                        <div class="container form input">
                            <form action="/prove03/productDetails/<%= product.id %>" method="POST">
                                <button type="submit" style="color: black" >More Info</button>
                            </form>
                        </div>

                        <br>

                    <% } %>
            <% } else { %>
                <h1>No products Found!</h1>
            <% } %>
        </div>
        </div>
    </div>
</body>
</html>