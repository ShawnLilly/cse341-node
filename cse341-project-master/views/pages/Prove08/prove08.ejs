<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../includes/header.ejs') %>
</head>
<body>
    <%- include('../../includes/nav.ejs') %>
    <div class="jumbotron text-center">
        <div class="container">
          <h1><%= title %> - Some Cool Products</h1>
          <div class="container2">
            <% if (products.length > 0) { %>
                    <% for (let product of products) { %>
                        
                        <h2><%= product.name %></h2>

                        <div class="containerBorder">
                            <img src="<%= product.imageUrl %>"
                             alt="<%= product.name %>"
                             style="width:490px;">
                             <div>
                                <h3>Price: <%= product.price %></h3>
                            </div>
                        </div>


                        <br>

                    <% } %>

                    <section class="pagination">
                        
                        <% if (currentPage !== 1 && previousPage !== 1) { %>
                        <a href="/prove08?page=1"><<</a>
                        <% } %>

                        <% if (hasPreviousPage) { %>
                        <a href="/prove08?page=<%= previousPage %>" ><%= previousPage %></a>
                        <% } %>

                        <a href="/prove08?page=<%= currentPage %>" class="active"><%= currentPage %></a>
                        
                        <% if (hasNextPage) { %>
                        <a href="/prove08?page=<%= nextPage %>" ><%= nextPage %></a>
                        <% } %>
                        
                        <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
                        <a href="/prove08?page=<%= lastPage %>" >>></a>
                        <% } %>

                    </section>
            <% } else { %>
                <h1>No products Found!</h1>
            <% } %>
        </div>
        </div>
    </div>
</body>
</html>