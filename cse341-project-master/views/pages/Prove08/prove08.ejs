<%- include('../../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
</head>

<body>
    <%- include('../../includes/nav.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                            <h1 class="product__category"><%= product.category %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/products/<%= product._id %>" class="btn">Details</a>
                        </div>
                    </article>
                <% } %>
            </div>
            <section class="pagination">
                        
                <% if (currentPage !== 1 && previousPage !== 1) { %>
                <a href="/prove08?page=1"><<</a>
                <% } %>

                <% if (hasPreviousPage) { %>
                <a href="/prove08?page=<%= previousPage %>" ><%= previousPage %></a>
                <% } %>

                <a href="/prove08?page=<%= currentPage %>" class="active"><%= currentPage %></a>
                
                <% if (hasNextPage) { %>
                <a href="/prove08?page=<%= nextPage %>" ><%= nextPage %></a>
                <% } %>
                
                <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
                <a href="/prove08?page=<%= lastPage %>" >>></a>
                <% } %>

        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../../includes/end.ejs') %>